extends layout

block content
  .text-center
    form.form-login(method="POST")
      #error
        if error
          p.text-danger Error!!!

      div1
        p Login Page
      user
        label.sr-only(for="inputUsername") Username:
        input#inputUsername.form-control(
          type="username",
          name="username",
          placeholder="Username",
          required,
          autofocus
        )
      li
      password
        label.sr-only(for="inputPassword") Password:
        input#inputPassword.form-control(
          type="password",
          name="password",
          placeholder="Password",
          required
        )
      li
      - var buttonClass = ["btn", "btn-lg", "btn-primary", "btn-block"];
      button(class=buttonClass, type="submit") Login
