extends layout

block content
    div.text-center
        form(class="form-signup" method="POST")
            #error
                if error
                    p.text-danger Error!!!

            div1
                p Sign Up Page
            
            user
                label( for="inputUsername" class="sr-only") Username: 
                input(type="username" name="username" id="inputUsername" class="form-control" placeholder="Username" required autofocus)
            li
            password
                label(for="inputPassword" class="sr-only") Password: 
                input(type="password" name="password" id="inputPassword" class="form-control" placeholder="Password" required)
            li
            confirmpassword
                label(for="confirmpassword" class="sr-only") Confirm Password: 
                input(type="confirmpassword" name="confirmpassword" id="confirmpassword" class="form-control" placeholder="Confirm Password" required)
            p
            - var buttonClass=['btn', 'btn-lg', 'btn-primary', 'btn-block'];
            button(class=buttonClass type="submit") Sign Up 